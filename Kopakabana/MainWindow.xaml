<Window x:Class="Kopakabana.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kopakabana"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Kopakabana" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="0" Content="Wybierz turniej" HorizontalAlignment="Center" Width="250" Height="50" Click="WybierzTurniejClick"/>
        <Button Grid.Column="1" Grid.Row="1"  Content="Jak grać" HorizontalAlignment="Center"  Width="250" Height="50" Click="JakGracClick"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Wyjdź" HorizontalAlignment="Center"  Width="250" Height="50" Click="WyjdzClick"/>
    </Grid>
</Window>
