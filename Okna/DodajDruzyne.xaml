        <TextBlock HorizontalAlignment="Left" Margin="256,88,0,0" TextWrapping="Wrap" Text="Zawodnik 1: " VerticalAlignment="Top"/>
        <TextBox x:Name="zawodnik1" HorizontalAlignment="Left" Margin="349,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.344,-0.223"/>
        <TextBlock HorizontalAlignment="Left" Margin="256,121,0,0" TextWrapping="Wrap" Text="Zawodnik 2: " VerticalAlignment="Top"/>
        <TextBox x:Name="zawodnik2" HorizontalAlignment="Left" Margin="349,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.344,-0.223"/>
        <TextBlock HorizontalAlignment="Left" Margin="256,157,0,0" TextWrapping="Wrap" Text="Zawodnik 3: " VerticalAlignment="Top"/>
        <TextBox x:Name="zawodnik3" HorizontalAlignment="Left" Margin="349,157,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.344,-0.223"/>
        <TextBlock HorizontalAlignment="Left" Margin="256,187,0,0" TextWrapping="Wrap" Text="Zawodnik 4: " VerticalAlignment="Top"/>
        <TextBox x:Name="zawodnik4" HorizontalAlignment="Left" Margin="349,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.344,-0.223"/>
    </Grid>
</Window>
